# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /                           controllers.ViewController.index

GET     /api/user                   controllers.UserController.listAll
GET     /api/user/:id               controllers.UserController.listOne(id: Long)
POST    /api/user                   controllers.UserController.create
PUT     /api/user                   controllers.UserController.update
DELETE  /api/user/:id               controllers.UserController.delete(id: Long)

GET     /api/commonuser             controllers.CommonUserController.listAll
GET     /api/commonuser/:id         controllers.CommonUserController.listOne(id: Long)
POST    /api/commonuser             controllers.CommonUserController.create
PUT     /api/commonuser             controllers.CommonUserController.update
DELETE  /api/commonuser/:id         controllers.CommonUserController.delete(id: Long)

GET     /api/enterpriseuser         controllers.EnterpriseUserController.listAll
GET     /api/enterpriseuser/:id     controllers.EnterpriseUserController.listOne(id: Long)
POST    /api/enterpriseuser         controllers.EnterpriseUserController.create
PUT     /api/enterpriseuser         controllers.EnterpriseUserController.update
DELETE  /api/enterpriseuser/:id     controllers.EnterpriseUserController.delete(id: Long)

GET     /api/product                controllers.ProductController.listAll
GET     /api/product/:id            controllers.ProductController.listOne(id: Long)
POST    /api/product                controllers.ProductController.create
PUT     /api/product                controllers.ProductController.update
DELETE  /api/product/:id            controllers.ProductController.delete(id: Long)

GET     /api/message                controllers.MessageController.listAll
GET     /api/message/:id            controllers.MessageController.listOne(id: Long)
POST    /api/message                controllers.MessageController.create
PUT     /api/message                controllers.MessageController.update
DELETE  /api/message/:id            controllers.MessageController.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
